
<launch>
  <!-- Arguments -->

  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>
  <include file="$(find voxbot_navigation)/launch/amcl.launch" />
  <include file="$(find voxbot_navigation)/launch/gmapping.launch" />

   <!-- <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0 0 0 0 0 0 1 map base_link 0" /> -->
   
  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find voxbot_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find voxbot_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find voxbot_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find voxbot_navigation)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find voxbot_navigation)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find voxbot_navigation)/config/teb_local_planner_params.yaml" command="load" />

    <remap from="odom" to="$(arg odom_topic)"/>
    <!-- <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" /> -->
    
  </node>
  
</launch>
