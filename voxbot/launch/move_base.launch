
<launch>
  <!-- Arguments -->

  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find voxbot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find voxbot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find voxbot)/config/move_base_params.yaml" command="load" />
    <rosparam file="$(find voxbot)/config/teb_local_planner_params.yaml" command="load" />

    <remap from="odom" to="$(arg odom_topic)"/>
    <!-- <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" /> -->
  </node>
</launch>
